{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Casos e Agentes",
    "version": "1.0.0",
    "description": "Documentação Swagger separando rotas de casos, agentes e documentação."
  },
  "tags": [
    {
      "name": "Casos",
      "description": "Operações relacionadas a casos policiais."
    },
    {
      "name": "Agentes",
      "description": "Operações relacionadas a agentes da polícia."
    },
    {
      "name": "Documentação",
      "description": "Rotas relacionadas à documentação da API."
    }
  ],
  "paths": {
    "/casos": {
      "get": {
        "tags": ["Casos"],
        "summary": "Listar todos os casos",
        "responses": {
          "200": {
            "description": "Lista de casos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Caso" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Casos"],
        "summary": "Criar novo caso",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CasoInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Caso criado com sucesso" },
          "400": { "description": "Erro de validação" }
        }
      }
    },
    "/casos/{id}": {
      "get": {
        "tags": ["Casos"],
        "summary": "Buscar caso por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Caso encontrado" },
          "404": { "description": "Caso não encontrado" }
        }
      },
      "put": {
        "tags": ["Casos"],
        "summary": "Atualizar caso (completo)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Caso" }
            }
          }
        },
        "responses": {
          "200": { "description": "Caso atualizado" },
          "400": { "description": "Erro de validação" }
        }
      },
      "patch": {
        "tags": ["Casos"],
        "summary": "Atualizar caso (parcial)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CasoParcial" }
            }
          }
        },
        "responses": {
          "200": { "description": "Caso atualizado parcialmente" },
          "400": { "description": "Erro de validação" }
        }
      },
      "delete": {
        "tags": ["Casos"],
        "summary": "Excluir caso",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "204": { "description": "Caso excluído com sucesso" },
          "404": { "description": "Caso não encontrado" }
        }
      }
    },
    "/casos/busca": {
      "get": {
        "tags": ["Casos"],
        "summary": "Buscar casos por texto",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Casos encontrados" },
          "400": { "description": "Parâmetro de busca inválido" }
        }
      }
    },
    "/casos/por-status": {
      "get": {
        "tags": ["Casos"],
        "summary": "Buscar casos por status",
        "parameters": [
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Casos encontrados" },
          "400": { "description": "Status ausente ou inválido" }
        }
      }
    },
    "/casos/por-agente": {
      "get": {
        "tags": ["Casos"],
        "summary": "Buscar casos por agente_id",
        "parameters": [
          {
            "name": "agente_id",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Casos encontrados" },
          "400": { "description": "agente_id ausente ou inválido" }
        }
      }
    },
    "/casos/{caso_id}/agente": {
      "get": {
        "tags": ["Casos"],
        "summary": "Buscar agente responsável por um caso",
        "parameters": [
          {
            "name": "caso_id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Agente responsável retornado" },
          "404": { "description": "Caso ou agente não encontrado" },
          "400": { "description": "ID inválido" }
        }
      }
    },
    "/agentes": {
      "get": {
        "tags": ["Agentes"],
        "summary": "Listar todos os agentes",
        "responses": {
          "200": {
            "description": "Lista de agentes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Agente" }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Agentes"],
        "summary": "Criar novo agente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AgenteInput" }
            }
          }
        },
        "responses": {
          "201": { "description": "Agente criado com sucesso" },
          "400": { "description": "Erro de validação" }
        }
      }
    },
    "/agentes/{id}": {
      "get": {
        "tags": ["Agentes"],
        "summary": "Buscar agente por ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "200": { "description": "Agente encontrado" },
          "404": { "description": "Agente não encontrado" }
        }
      },
      "put": {
        "tags": ["Agentes"],
        "summary": "Atualizar agente (completo)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Agente" }
            }
          }
        },
        "responses": {
          "200": { "description": "Agente atualizado" },
          "400": { "description": "Erro de validação" }
        }
      },
      "patch": {
        "tags": ["Agentes"],
        "summary": "Atualizar agente (parcial)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AgenteParcial" }
            }
          }
        },
        "responses": {
          "200": { "description": "Agente atualizado parcialmente" },
          "400": { "description": "Erro de validação" }
        }
      },
      "delete": {
        "tags": ["Agentes"],
        "summary": "Excluir agente",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "format": "uuid" }
          }
        ],
        "responses": {
          "204": { "description": "Agente excluído com sucesso" },
          "404": { "description": "Agente não encontrado" }
        }
      }
    },
    "/v1/docs-swagger": {
      "get": {
        "tags": ["Documentação"],
        "summary": "Obter JSON da documentação Swagger",
        "description": "Retorna o arquivo swagger.json que descreve toda a API.",
        "responses": {
          "200": {
            "description": "Documentação retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Caso": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "titulo": { "type": "string" },
          "descricao": { "type": "string" },
          "status": { "type": "string", "enum": ["aberto", "solucionado"] },
          "agente_id": { "type": "string", "format": "uuid" }
        },
        "required": ["id", "titulo", "descricao", "status"]
      },
      "CasoInput": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "descricao": { "type": "string" },
          "status": { "type": "string", "enum": ["aberto", "solucionado"] },
          "agente_id": { "type": "string", "format": "uuid" }
        },
        "required": ["titulo", "descricao", "status"]
      },
      "CasoParcial": {
        "type": "object",
        "properties": {
          "titulo": { "type": "string" },
          "descricao": { "type": "string" },
          "status": { "type": "string", "enum": ["aberto", "solucionado"] },
          "agente_id": { "type": "string", "format": "uuid" }
        }
      },
      "Agente": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "nome": { "type": "string" },
          "dataDeIncorporacao": { "type": "string", "format": "date" },
          "cargo": {
            "type": "string",
            "enum": ["inspetor", "delegado", "escrivao", "agente"]
          }
        },
        "required": ["id", "nome", "dataDeIncorporacao", "cargo"]
      },
      "AgenteInput": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "dataDeIncorporacao": { "type": "string", "format": "date" },
          "cargo": {
            "type": "string",
            "enum": ["inspetor", "delegado", "escrivao", "agente"]
          }
        },
        "required": ["nome", "dataDeIncorporacao", "cargo"]
      },
      "AgenteParcial": {
        "type": "object",
        "properties": {
          "nome": { "type": "string" },
          "dataDeIncorporacao": { "type": "string", "format": "date" },
          "cargo": {
            "type": "string",
            "enum": ["inspetor", "delegado", "escrivao", "agente"]
          }
        }
      }
    }
  }
}
